{
  "name": "typescript-react-mobx-boilerplate",
  "version": "0.4.0",
  "private": true,
  "description": "A frontend boilerplate with React, MobX and Typescript",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && rm -rf dist",
    "test": "jest",
    "start": "webpack-dev-server -d --history-api-fallback --hot --inline --progress --colors --port 3000 --open --host 0.0.0.0",
    "build": "npm run clean && webpack -p --progress --colors --hide-modules",
    "deploy": "firebase deploy",
    "release": "npm run build && npm run deploy"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/jest": "^22.0.1",
    "@types/node": "^8.0.46",
    "@types/react": "^16.0.16",
    "@types/react-dom": "^16.0.2",
    "@types/react-router": "^4.0.16",
    "@types/react-router-dom": "^4.2.3",
    "@types/webpack": "^3.0.13",
    "awesome-typescript-loader": "^3.2.3",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "fela-monolithic": "^5.0.17",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.1.4",
    "mobx-react-devtools": "^4.2.15",
    "postcss": "^6.0.13",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.1.2",
    "prettier": "1.10.2",
    "react-hot-loader": "^3.1.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^22.0.1",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "typescript": "^2.5.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-hot-middleware": "^2.20.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.92",
    "classnames": "^2.2.5",
    "downshift": "^1.28.0",
    "firebase": "4.8.0",
    "lodash": "^4.17.4",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.3",
    "mobx-react-router": "^4.0.1",
    "path-to-regexp": "^2.1.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-fela": "^6.2.4",
    "react-helmet": "^5.2.0",
    "react-numeric-input": "^2.2.3",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "reflexbox": "^3.0.0-0"
  },
  "jest": {
    "globalTeardown": "./setup/teardown.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
